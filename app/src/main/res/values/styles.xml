<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorSecondary">@color/lightSecondary</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorText">@color/lightText</item>
        <item name="theme_Icon">@drawable/ic_sun</item>
        <item name="android:windowAnimationStyle">@anim/go_in</item>
        <item name="android:windowBackground">@color/lightSecondary</item>
    </style>

    <style name="AppTheme_Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorSecondary">@color/darkSecondary</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorText">@color/darkText</item>
        <item name="theme_Icon">@drawable/ic_moon</item>
        <item name="android:windowAnimationStyle">@anim/go_in</item>
        <item name="android:windowBackground">@color/darkSecondary</item>
    </style>

    <style name="circleImageViewStyle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
